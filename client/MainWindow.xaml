<Window x:Class="PS5Upload.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PS5 Upload - High-Speed File Transfer" Height="600" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#1E1E1E"
        Icon="ps5_logo.png">
    
    <Window.Resources>
        <!-- Override system colors for ComboBox dropdown -->
        <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="#2D2D30"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.WindowColorKey}" Color="#2D2D30"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#2D2D30"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.ControlColorKey}" Color="#2D2D30"/>
        
        <Style TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1C97EA"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#3E3E42"/>
                    <Setter Property="Foreground" Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20" Orientation="Horizontal" HorizontalAlignment="Center">
            <Image Source="ps5_logo.png" 
                   Width="80" 
                   Height="80" 
                   Margin="0,0,15,0"
                   VerticalAlignment="Center"/>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="PS5 Upload - High-Speed File Transfer" 
                           FontSize="24" 
                           FontWeight="Bold"
                           Foreground="#007ACC"/>
                <TextBlock Text="By Manos" 
                           FontSize="12" 
                           Foreground="#999999"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- Connection Panel -->
        <Border Grid.Row="1" 
                Background="#252526" 
                BorderBrush="#3E3E42" 
                BorderThickness="1" 
                CornerRadius="4" 
                Padding="15"
                Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- PS5 Profile Selection -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="PS5 Profile:" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <ComboBox x:Name="PS5ProfileComboBox"
                              Width="200"
                              VerticalAlignment="Center"
                              SelectionChanged="PS5ProfileComboBox_SelectionChanged"
                              Background="#2D2D30"
                              Foreground="White"
                              BorderBrush="#3E3E42">
                        <ComboBox.Template>
                            <ControlTemplate TargetType="ComboBox">
                                <Grid>
                                    <ToggleButton Name="ToggleButton"
                                                  Grid.Column="2"
                                                  Focusable="false"
                                                  IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                  ClickMode="Press"
                                                  Background="#2D2D30"
                                                  BorderBrush="#3E3E42"
                                                  BorderThickness="1"/>
                                    <ContentPresenter Name="ContentSite"
                                                      IsHitTestVisible="False"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                      Margin="5,3,23,3"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Left"/>
                                    <Popup Name="Popup"
                                           Placement="Bottom"
                                           IsOpen="{TemplateBinding IsDropDownOpen}"
                                           AllowsTransparency="True"
                                           Focusable="False"
                                           PopupAnimation="Slide">
                                        <Grid Name="DropDown"
                                              SnapsToDevicePixels="True"
                                              MinWidth="{TemplateBinding ActualWidth}"
                                              MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                            <Border Name="DropDownBorder"
                                                    Background="#2D2D30"
                                                    BorderThickness="1"
                                                    BorderBrush="#3E3E42"/>
                                            <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                                <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                            </ScrollViewer>
                                        </Grid>
                                    </Popup>
                                </Grid>
                            </ControlTemplate>
                        </ComboBox.Template>
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Background" Value="#2D2D30"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ComboBoxItem">
                                            <Border Name="Border" 
                                                    Background="#2D2D30"
                                                    Padding="5">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsHighlighted" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="#007ACC"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="#007ACC"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>
                    <Button Content="ðŸ’¾ Save Profile" 
                            Click="SaveProfileButton_Click"
                            Width="140"
                            Margin="10,0,0,0"
                            Background="#28A745"/>
                    <Button Content="ðŸ—‘ï¸ Delete Profile" 
                            Click="DeleteProfileButton_Click"
                            Width="150"
                            Margin="5,0,0,0"
                            Background="#DC3545"/>
                </StackPanel>
                
                <!-- IP Address and Connect -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               Text="PS5 IP Address:" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    
                    <TextBox Grid.Column="1" 
                             x:Name="IpAddressTextBox"
                             Text="192.168.0.160"
                             VerticalAlignment="Center"
                             Margin="0,0,10,0"/>
                    
                    <Button Grid.Column="2" 
                            x:Name="ConnectButton"
                            Content="Connect"
                            Click="ConnectButton_Click"
                            Width="100"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Local Files -->
            <Border Grid.Column="0" 
                    Background="#252526" 
                    BorderBrush="#3E3E42" 
                    BorderThickness="1" 
                    CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Background="#2D2D30" 
                            Padding="10"
                            BorderBrush="#3E3E42"
                            BorderThickness="0,0,0,1">
                        <TextBlock Text="ðŸ“ Local Files" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"/>
                    </Border>

                    <ListBox Grid.Row="1" 
                             x:Name="LocalFilesListBox"
                             BorderThickness="0"
                             AllowDrop="True"
                             Drop="LocalFilesListBox_Drop"
                             DragEnter="LocalFilesListBox_DragEnter"
                             MouseRightButtonUp="LocalFilesListBox_RightClick">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBlock Text="{Binding Icon}" 
                                               FontSize="16" 
                                               Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding Name}" 
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="ðŸ—‘ï¸ Remove" Click="RemoveLocalFile_Click"/>
                            </ContextMenu>
                        </ListBox.ContextMenu>
                    </ListBox>

                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                Margin="10"
                                HorizontalAlignment="Center">
                        <Button Content="Browse Files" 
                                Click="BrowseFilesButton_Click"
                                Margin="0,0,5,0"/>
                        <Button Content="Browse Folder" 
                                Click="BrowseFolderButton_Click"
                                Margin="0,0,5,0"/>
                        <Button Content="Clear All" 
                                Click="ClearLocalFiles_Click"
                                Background="#DC3545"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- PS5 Files -->
            <Border Grid.Column="2" 
                    Background="#252526" 
                    BorderBrush="#3E3E42" 
                    BorderThickness="1" 
                    CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Background="#2D2D30" 
                            Padding="10"
                            BorderBrush="#3E3E42"
                            BorderThickness="0,0,0,1">
                        <TextBlock Text="ðŸŽ® PS5 Files" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"/>
                    </Border>

                    <StackPanel Grid.Row="1" 
                                Margin="10"
                                Background="#2D2D30">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Current Path:" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                            <TextBox x:Name="CurrentPathTextBox"
                                     Text="/data"
                                     Width="200"
                                     VerticalAlignment="Center"
                                     Margin="0,0,10,0"/>
                            <Button Content="Go" 
                                    Click="GoButton_Click"
                                    Width="60"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="â­ Favorites:" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                            <ComboBox x:Name="FavoritesComboBox"
                                      Width="200"
                                      VerticalAlignment="Center"
                                      SelectionChanged="FavoritesComboBox_SelectionChanged"
                                      Background="#2D2D30"
                                      Foreground="White"
                                      BorderBrush="#3E3E42">
                                <ComboBox.Template>
                                    <ControlTemplate TargetType="ComboBox">
                                        <Grid>
                                            <ToggleButton Name="ToggleButton"
                                                          Grid.Column="2"
                                                          Focusable="false"
                                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                          ClickMode="Press"
                                                          Background="#2D2D30"
                                                          BorderBrush="#3E3E42"
                                                          BorderThickness="1"/>
                                            <ContentPresenter Name="ContentSite"
                                                              IsHitTestVisible="False"
                                                              Content="{TemplateBinding SelectionBoxItem}"
                                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                              Margin="5,3,23,3"
                                                              VerticalAlignment="Center"
                                                              HorizontalAlignment="Left"/>
                                            <Popup Name="Popup"
                                                   Placement="Bottom"
                                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                                   AllowsTransparency="True"
                                                   Focusable="False"
                                                   PopupAnimation="Slide">
                                                <Grid Name="DropDown"
                                                      SnapsToDevicePixels="True"
                                                      MinWidth="{TemplateBinding ActualWidth}"
                                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                                    <Border Name="DropDownBorder"
                                                            Background="#2D2D30"
                                                            BorderThickness="1"
                                                            BorderBrush="#3E3E42"/>
                                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                                    </ScrollViewer>
                                                </Grid>
                                            </Popup>
                                        </Grid>
                                    </ControlTemplate>
                                </ComboBox.Template>
                                <ComboBox.ItemContainerStyle>
                                    <Style TargetType="ComboBoxItem">
                                        <Setter Property="Background" Value="#2D2D30"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="Padding" Value="5"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ComboBoxItem">
                                                    <Border Name="Border" 
                                                            Background="#2D2D30"
                                                            Padding="5">
                                                        <ContentPresenter/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsHighlighted" Value="True">
                                                            <Setter TargetName="Border" Property="Background" Value="#007ACC"/>
                                                        </Trigger>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="Border" Property="Background" Value="#007ACC"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ComboBox.ItemContainerStyle>
                            </ComboBox>
                            <Button Content="â­ Add" 
                                    Click="AddFavoriteButton_Click"
                                    Width="90"
                                    Margin="10,0,0,0"
                                    Background="#28A745"/>
                            <Button Content="ðŸ—‘ï¸ Remove" 
                                    Click="RemoveFavoriteButton_Click"
                                    Width="110"
                                    Margin="5,0,0,0"
                                    Background="#DC3545"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ” Search:" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                            <TextBox x:Name="SearchTextBox"
                                     Width="250"
                                     VerticalAlignment="Center"
                                     TextChanged="SearchTextBox_TextChanged"
                                     Background="#1E1E1E"
                                     Foreground="White"
                                     BorderBrush="#3E3E42"/>
                            <Button Content="âœ– Clear" 
                                    Click="ClearSearchButton_Click"
                                    Width="100"
                                    Margin="5,0,0,0"
                                    Background="#3E3E42"/>
                        </StackPanel>
                    </StackPanel>

                    <ListBox Grid.Row="2" 
                             x:Name="PS5FilesListBox"
                             BorderThickness="0"
                             SelectionMode="Extended"
                             MouseDoubleClick="PS5FilesListBox_MouseDoubleClick">
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="â¬‡ï¸ Download to PC" Click="DownloadMenuItem_Click"/>
                                <Separator/>
                                <MenuItem Header="ðŸ“ Rename" Click="RenameMenuItem_Click"/>
                                <MenuItem Header="ðŸ“‹ Copy" Click="CopyMenuItem_Click"/>
                                <MenuItem Header="âœ‚ï¸ Move" Click="MoveMenuItem_Click"/>
                                <Separator/>
                                <MenuItem Header="ðŸ—‘ï¸ Delete" Click="DeleteMenuItem_Click"/>
                                <MenuItem Header="ðŸ—‘ï¸ Delete Selected" Click="DeleteSelectedMenuItem_Click"/>
                            </ContextMenu>
                        </ListBox.ContextMenu>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBlock Text="{Binding Icon}" 
                                               FontSize="16" 
                                               Margin="0,0,10,0"/>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" 
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding SizeText}" 
                                                   FontSize="11" 
                                                   Foreground="#999999"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Border Grid.Row="3" 
                            Background="#2D2D30"
                            BorderBrush="#3E3E42"
                            BorderThickness="1"
                            CornerRadius="4"
                            Margin="10"
                            Padding="10">
                        <StackPanel>
                            <TextBlock Text="ðŸ’¾ Data Storage (/data)" 
                                       FontSize="12" 
                                       FontWeight="Bold"
                                       Foreground="#007ACC"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                           Text="Free:" 
                                           FontSize="11"
                                           Foreground="#999999"
                                           Margin="0,0,8,4"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" 
                                           x:Name="StorageFreeText"
                                           Text="--" 
                                           FontSize="11"
                                           Foreground="#4EC9B0"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Right"
                                           Margin="0,0,0,4"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                           Text="Used:" 
                                           FontSize="11"
                                           Foreground="#999999"
                                           Margin="0,0,8,4"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" 
                                           x:Name="StorageUsedText"
                                           Text="--" 
                                           FontSize="11"
                                           Foreground="#CE9178"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Right"
                                           Margin="0,0,0,4"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" 
                                           Text="Total:" 
                                           FontSize="11"
                                           Foreground="#999999"
                                           Margin="0,0,8,4"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" 
                                           x:Name="StorageTotalText"
                                           Text="--" 
                                           FontSize="11"
                                           Foreground="White"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Right"
                                           Margin="0,0,0,4"/>
                                
                                <!-- Progress Bar -->
                                <ProgressBar Grid.Row="3" Grid.ColumnSpan="2"
                                             x:Name="StorageProgressBar"
                                             Height="6"
                                             Margin="0,6,0,0"
                                             Minimum="0"
                                             Maximum="100"
                                             Value="0"
                                             Foreground="#CE9178"
                                             Background="#3E3E42"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Log & History Panel -->
            <Border Grid.Column="4" 
                    Background="#252526" 
                    BorderBrush="#3E3E42" 
                    BorderThickness="1" 
                    CornerRadius="4">
                <TabControl Background="#252526" BorderThickness="0">
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="Background" Value="#2D2D30"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="15,8"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Border Name="Border" Background="{TemplateBinding Background}" 
                                                BorderThickness="0,0,0,2" BorderBrush="Transparent" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter ContentSource="Header" 
                                                              HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#1E1E1E"/>
                                                <Setter TargetName="Border" Property="BorderBrush" Value="#007ACC"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#3E3E42"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabControl.Resources>
                    
                    <!-- Debug Log Tab -->
                    <TabItem Header="ðŸ“‹ Debug Log">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBox Grid.Row="0" 
                                     x:Name="LogTextBox"
                                     Text=""
                                     FontFamily="Consolas"
                                     FontSize="11"
                                     Foreground="#CCCCCC"
                                     Background="#1E1E1E"
                                     BorderThickness="0"
                                     Padding="10"
                                     TextWrapping="Wrap"
                                     IsReadOnly="True"
                                     IsReadOnlyCaretVisible="False"
                                     Focusable="False"
                                     Cursor="Arrow"
                                     VerticalScrollBarVisibility="Auto"
                                     HorizontalScrollBarVisibility="Auto"/>

                            <StackPanel Grid.Row="1" 
                                        Orientation="Horizontal" 
                                        Margin="10"
                                        HorizontalAlignment="Center">
                                <Button Content="ðŸ“‹ Copy Log"
                                        Click="CopyLogButton_Click"
                                        Margin="0,0,10,0"
                                        Background="#28A745"/>
                                <Button Content="Clear Log"
                                        Click="ClearLogButton_Click"
                                        Background="#3E3E42"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                    
                    <!-- Transfer History Tab -->
                    <TabItem Header="ðŸ“Š Transfer History">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <ScrollViewer Grid.Row="0" 
                                          VerticalScrollBarVisibility="Auto"
                                          Background="#1E1E1E">
                                <StackPanel>
                                    <!-- Completed Transfers Section -->
                                    <Expander Header="âœ… Completed Transfers" 
                                              IsExpanded="True"
                                              Background="#2D2D30"
                                              Foreground="White"
                                              BorderBrush="#3E3E42"
                                              BorderThickness="0,0,0,1"
                                              Padding="5">
                                        <ListBox x:Name="CompletedTransfersListBox"
                                                 BorderThickness="0"
                                                 Background="#1E1E1E"
                                                 Foreground="White"
                                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                 MaxHeight="400">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Border BorderBrush="#3E3E42" 
                                                            BorderThickness="0,0,0,1" 
                                                            Padding="10,8"
                                                            Background="Transparent">
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>
                                                            
                                                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,4">
                                                                <TextBlock Text="{Binding StatusIcon}" 
                                                                           FontSize="14" 
                                                                           Margin="0,0,8,0"/>
                                                                <TextBlock Text="{Binding Type}" 
                                                                           FontWeight="Bold" 
                                                                           FontSize="13"
                                                                           Foreground="#007ACC"
                                                                           Margin="0,0,8,0"/>
                                                                <TextBlock Text="{Binding TimestampFormatted}" 
                                                                           FontSize="11" 
                                                                           Foreground="#999999"/>
                                                            </StackPanel>
                                                            
                                                            <TextBlock Grid.Row="1" 
                                                                       Text="{Binding FileName}" 
                                                                       FontSize="12"
                                                                       FontWeight="SemiBold"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       Margin="0,0,0,4"/>
                                                            
                                                            <StackPanel Grid.Row="2" Orientation="Horizontal">
                                                                <TextBlock Text="{Binding SizeFormatted}" 
                                                                           FontSize="11" 
                                                                           Foreground="#999999"
                                                                           Margin="0,0,10,0"/>
                                                                <TextBlock Text="â€¢" 
                                                                           FontSize="11" 
                                                                           Foreground="#666666"
                                                                           Margin="0,0,10,0"/>
                                                                <TextBlock Text="{Binding SpeedFormatted}" 
                                                                           FontSize="11" 
                                                                           Foreground="#28A745"/>
                                                            </StackPanel>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </Expander>
                                    
                                    <!-- Failed Transfers Section -->
                                    <Expander Header="âŒ Failed Transfers" 
                                              IsExpanded="True"
                                              Background="#2D2D30"
                                              Foreground="White"
                                              BorderBrush="#3E3E42"
                                              BorderThickness="0,0,0,1"
                                              Padding="5"
                                              Margin="0,5,0,0">
                                        <ListBox x:Name="FailedTransfersListBox"
                                                 BorderThickness="0"
                                                 Background="#1E1E1E"
                                                 Foreground="White"
                                                 SelectionMode="Extended"
                                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                 MaxHeight="400"
                                                 MouseRightButtonUp="FailedTransfersListBox_RightClick">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Border BorderBrush="#3E3E42" 
                                                            BorderThickness="0,0,0,1" 
                                                            Padding="10,8"
                                                            Background="Transparent">
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>
                                                            
                                                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,4">
                                                                <TextBlock Text="{Binding StatusIcon}" 
                                                                           FontSize="14" 
                                                                           Margin="0,0,8,0"/>
                                                                <TextBlock Text="{Binding Type}" 
                                                                           FontWeight="Bold" 
                                                                           FontSize="13"
                                                                           Foreground="#DC3545"
                                                                           Margin="0,0,8,0"/>
                                                                <TextBlock Text="{Binding TimestampFormatted}" 
                                                                           FontSize="11" 
                                                                           Foreground="#999999"/>
                                                            </StackPanel>
                                                            
                                                            <TextBlock Grid.Row="1" 
                                                                       Text="{Binding FileName}" 
                                                                       FontSize="12"
                                                                       FontWeight="SemiBold"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       Margin="0,0,0,4"/>
                                                            
                                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,4">
                                                                <TextBlock Text="{Binding SizeFormatted}" 
                                                                           FontSize="11" 
                                                                           Foreground="#999999"
                                                                           Margin="0,0,10,0"/>
                                                                <TextBlock Text="â€¢" 
                                                                           FontSize="11" 
                                                                           Foreground="#666666"
                                                                           Margin="0,0,10,0"/>
                                                                <TextBlock Text="{Binding SpeedFormatted}" 
                                                                           FontSize="11" 
                                                                           Foreground="#DC3545"/>
                                                            </StackPanel>
                                                            
                                                            <TextBlock Grid.Row="3" 
                                                                       Text="{Binding ErrorMessage}" 
                                                                       FontSize="10"
                                                                       FontStyle="Italic"
                                                                       Foreground="#FFC107"
                                                                       TextWrapping="Wrap"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                            <ListBox.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Header="ðŸ”„ Retry Selected" Click="RetryFailedTransfers_Click"/>
                                                    <MenuItem Header="ðŸ—‘ï¸ Remove Selected" Click="RemoveFailedTransfers_Click"/>
                                                </ContextMenu>
                                            </ListBox.ContextMenu>
                                        </ListBox>
                                    </Expander>
                                </StackPanel>
                            </ScrollViewer>

                            <StackPanel Grid.Row="1" 
                                        Orientation="Vertical" 
                                        Margin="10"
                                        HorizontalAlignment="Center">
                                <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Center"
                                            Margin="0,0,0,10">
                                    <Button Content="ðŸ“Š Export"
                                            Click="ExportHistoryButton_Click"
                                            Margin="0,0,10,0"
                                            Background="#28A745"/>
                                    <Button Content="ðŸ—‘ï¸ Clear All"
                                            Click="ClearHistoryButton_Click"
                                            Background="#DC3545"/>
                                </StackPanel>
                                <CheckBox x:Name="AutoClearHistoryCheckBox"
                                          Content="ðŸ”„ Auto Clear on Startup"
                                          HorizontalAlignment="Center"
                                          Foreground="White"
                                          Checked="AutoClearHistoryCheckBox_Changed"
                                          Unchecked="AutoClearHistoryCheckBox_Changed"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>

        <!-- Upload Progress -->
        <Border Grid.Row="3" 
                Background="#252526" 
                BorderBrush="#3E3E42" 
                BorderThickness="1" 
                CornerRadius="4" 
                Padding="15"
                Margin="0,15,0,0"
                x:Name="ProgressPanel"
                Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Files Remaining Counter -->
                <TextBlock Grid.Row="0" 
                           x:Name="FilesRemainingText"
                           Text="Files: 0 / 0 (0 remaining)"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="#FFC107"
                           Margin="0,0,0,8"/>

                <!-- Total Folder Progress -->
                <TextBlock Grid.Row="1" 
                           x:Name="TotalProgressText"
                           Text="Total: 0 / 0 files"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#28A745"
                           Margin="0,0,0,5"/>

                <ProgressBar Grid.Row="2" 
                             x:Name="TotalProgressBar"
                             Height="20"
                             Minimum="0"
                             Maximum="100"
                             Value="0"
                             Foreground="#17A2B8"
                             Background="#2D2D30"
                             BorderBrush="#3E3E42"
                             Margin="0,0,0,10"/>

                <!-- Current File -->
                <TextBlock Grid.Row="3" 
                           x:Name="UploadFileNameText"
                           Text="Uploading: filename.bin"
                           FontSize="13"
                           Margin="0,0,0,5"/>

                <ProgressBar Grid.Row="4" 
                             x:Name="UploadProgressBar"
                             Height="20"
                             Minimum="0"
                             Maximum="100"
                             Value="0"
                             Foreground="#28A745"
                             Background="#2D2D30"
                             BorderBrush="#3E3E42"/>

                <!-- Speed and Progress -->
                <Grid Grid.Row="5" Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               x:Name="UploadSpeedText"
                               Text="Speed: 0 MB/s | Avg: 0 MB/s"
                               FontSize="12"
                               Foreground="#999999"/>

                    <TextBlock Grid.Column="1" 
                               x:Name="UploadProgressText"
                               Text="0 / 0 MB (0%)"
                               FontSize="12"
                               Foreground="#999999"/>
                </Grid>

                <!-- ETA -->
                <TextBlock Grid.Row="6" 
                           x:Name="UploadETAText"
                           Text="ETA: Calculating..."
                           FontSize="12"
                           Foreground="#999999"
                           Margin="0,5,0,0"/>
            </Grid>
        </Border>

        <!-- Upload Buttons -->
        <Grid Grid.Row="4" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0"
                    x:Name="UploadButton"
                    Content="â¬†ï¸ Upload to PS5"
                    Click="UploadButton_Click"
                    Height="45"
                    FontSize="16"
                    FontWeight="SemiBold"
                    IsEnabled="False"/>
            
            <Button Grid.Column="2"
                    x:Name="CancelButton"
                    Content="âŒ Cancel"
                    Click="CancelButton_Click"
                    Height="45"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Background="#DC3545"
                    IsEnabled="False"/>
        </Grid>
    </Grid>
</Window>
